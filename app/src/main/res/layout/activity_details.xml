<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/base_action_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red_text">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/user_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_back_normal"
            android:layout_alignParentLeft="true"
            android:visibility="visible"
            />


        <TextView
            android:id="@+id/tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城事详情"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:visibility="visible"/>

        <ImageView
            android:src="@drawable/new_con_share_2"
            android:id="@+id/mWebView_share"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />


    </RelativeLayout>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/mWebView">

    </WebView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/cover_main_zan_n"
            android:layout_alignParentLeft="true"
            android:visibility="visible"
            />

        <EditText
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:hint="写评论"/>

        <Button
            android:src="@drawable/new_con_share_2"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:text="发送"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_margin="10dp"
            android:id="@+id/mWebView_sendBtn"/>
    </RelativeLayout>

</LinearLayout>