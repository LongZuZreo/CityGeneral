<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门事"
        android:textSize="18sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="1.5dp"
        android:background="@color/grayline" />
    
    <LinearLayout
        android:id="@+id/theTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange">

            <ImageView
                android:id="@+id/cityThing"
                android:layout_width="80dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cityThing"
                android:text="城事"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关我事要评说"
                android:textColor="@color/white"
                android:layout_below="@id/titleText"
                android:layout_alignLeft="@id/titleText"
                android:layout_marginTop="8dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange">

            <ImageView
                android:id="@+id/active"
                android:layout_width="80dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/titleText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/active"
                android:text="活动"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="就爱凑热闹"
                android:textColor="@color/white"
                android:layout_below="@id/titleText1"
                android:layout_alignLeft="@id/titleText1"
                android:layout_marginTop="8dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
    </LinearLayout>
</LinearLayout>